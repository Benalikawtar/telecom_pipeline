from kafka import KafkaConsumer
import json

consumer = KafkaConsumer(
    'dead_letter_topic',
    bootstrap_servers='localhost:9092',
    auto_offset_reset='earliest',
    value_deserializer=lambda m: json.loads(m.decode('utf-8'))
)

print("ðŸ”´ En Ã©coute des ERREURS... (enregistrement dans 'errors_log.jsonl')\n")

with open("errors_log.jsonl", "a") as file:
    try:
        for msg in consumer:
            data = msg.value
            print(f"\033[91m[âœ– ERROR] {json.dumps(data, indent=2)}\033[0m\n")
            file.write(json.dumps(data) + "\n")  # format JSON lines
    except KeyboardInterrupt:
        print("\nâ›” ArrÃªtÃ©")
    finally:
        consumer.close()

